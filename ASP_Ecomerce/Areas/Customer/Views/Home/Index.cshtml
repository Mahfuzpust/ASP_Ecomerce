@using ASP_Ecomerce.Models;
@model List<Products>
@{
    ViewData["Title"] = "Home Page";
}

<br /> <br />
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-3">
            <div class="card mb-5">
                <div class="card-header">
                    <h4 class=" font-weight-normal">
                        <label style="font-size: 25px;color: steelblue">@product.Name</label>
                    </h4>
                </div>
                <img src="/@product.Image" alt="Card Image" class="card-img-top" style="width:303px; height:250px;">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px"><b>TK. @product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn pull-right btn-outline-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


