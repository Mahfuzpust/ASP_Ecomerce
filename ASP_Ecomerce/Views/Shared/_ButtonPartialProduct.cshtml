@model int
@{
    ViewData["Title"] = "_ButtonPartialProduct";
}

<td style="width:150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="Product" class="btn btn-primary" asp-route-id="@Model"><i class="fa-regular fa-pen-to-square"></i></a>
        <a asp-action="Details" asp-controller="Product" class="btn btn-info" asp-route-id="@Model"><i class="fa-solid fa-list-ul"></i></a>
        <a asp-action="Delete" asp-controller="Product" class="btn btn-danger" asp-route-id="@Model"><i class="fa-solid fa-trash"></i></a>
    </div>

